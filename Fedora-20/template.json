{
    "builders": [
        {
            "boot_command": [
                "<esc>",
                "<wait>",
                "vmlinuz ",
                "initrd=initrd.img ",
                "inst.stage2=hd:LABEL=Fedora\\x2020\\x20x86_64 ",
                "rd.live.check ",
                "biosdevname=0 ",
                "net.ifnames=0 ",
                "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg",
                "<enter>"
            ],
            "boot_wait": "2s",
            "disk_size": 20480,
            "guest_os_type": "Fedora_64",
            "hard_drive_interface": "sata",
            "http_directory": "http/",
            "iso_checksum": "f2eeed5102b8890e9e6f4b9053717fe73031e699c4b76dc7028749ab66e7f917",
            "iso_checksum_type": "sha256",
            "iso_interface": "sata",
            "iso_url": "http://download.fedoraproject.org/pub/fedora/linux/releases/20/Fedora/x86_64/iso/Fedora-20-x86_64-DVD.iso",
            "name": "Fedora-20-VirtualBox",
            "shutdown_command": "systemctl poweroff",
            "ssh_password": "qwerty",
            "ssh_port": 22,
            "ssh_username": "root",
            "ssh_wait_timeout": "20m",
            "type": "virtualbox-iso",
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--bioslogodisplaytime",
                    "1"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "1"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "512"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--nictype1",
                    "virtio"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--pae",
                    "off"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--rtcuseutc",
                    "on"
                ]
            ],
            "virtualbox_version_file": "/etc/virtualbox-version",
            "vm_name": "Fedora-20"
        },
        {
            "boot_command": [
                "<esc>",
                "<wait>",
                "vmlinuz ",
                "initrd=initrd.img ",
                "inst.stage2=hd:LABEL=Fedora\\x2020\\x20x86_64 ",
                "rd.live.check ",
                "biosdevname=0 ",
                "net.ifnames=0 ",
                "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg",
                "<enter>"
            ],
            "boot_wait": "2s",
            "disk_size": 20480,
            "guest_os_type": "fedora-64",
            "http_directory": "http/",
            "iso_checksum": "f2eeed5102b8890e9e6f4b9053717fe73031e699c4b76dc7028749ab66e7f917",
            "iso_checksum_type": "sha256",
            "iso_url": "http://download.fedoraproject.org/pub/fedora/linux/releases/20/Fedora/x86_64/iso/Fedora-20-x86_64-DVD.iso",
            "name": "Fedora-20-VMware",
            "shutdown_command": "systemctl poweroff",
            "ssh_password": "qwerty",
            "ssh_port": 22,
            "ssh_username": "root",
            "ssh_wait_timeout": "20m",
            "tools_upload_flavor": "linux",
            "type": "vmware-iso",
            "vm_name": "Fedora-20",
            "vmx_data": {
                "cpuid.coresPerSocket": "1",
                "memsize": "512",
                "numvcpus": "1"
            }
        }
    ],
    "description": "This Packer template can be used to build minimal Fedora 20 base boxes for\nVagrant\u2019s VirtualBox and VMware providers, starting from Fedora\u2019s \u201cInstall DVD\u201d\nISO for x86_64 architectures.",
    "post-processors": [
        {
            "output": "Fedora-20-x86_64-{{.Provider}}.box",
            "type": "vagrant"
        }
    ],
    "provisioners": [
        {
            "scripts": [
                "scripts/10extlinux.sh",
                "scripts/20network.sh"
            ],
            "type": "shell"
        },
        {
            "only": [
                "Fedora-20-VirtualBox"
            ],
            "scripts": [
                "scripts/30virtualbox.sh"
            ],
            "type": "shell"
        },
        {
            "only": [
                "Fedora-20-VMware"
            ],
            "scripts": [
                "scripts/30vmware.sh"
            ],
            "type": "shell"
        },
        {
            "scripts": [
                "scripts/40vagrant.sh",
                "scripts/50cleanup.sh"
            ],
            "type": "shell"
        }
    ]
}
