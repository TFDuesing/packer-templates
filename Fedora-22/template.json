{
    "builders": [
        {
            "boot_command": [
                "<esc>",
                "<wait>",
                "vmlinuz ",
                "initrd=initrd.img ",
                "inst.stage2=hd:LABEL=Fedora-22-x86_64 ",
                "rd.live.check ",
                "net.ifnames=0 ",
                "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg",
                "<enter>"
            ],
            "boot_wait": "5s",
            "disk_size": 20480,
            "guest_os_type": "Fedora_64",
            "hard_drive_interface": "sata",
            "http_directory": "kickstart/",
            "iso_checksum": "9f1f2f19f75cc3b97da41878b5c86188fa8d27ed446bd97d9df615c137c77cfc",
            "iso_checksum_type": "sha256",
            "iso_interface": "sata",
            "iso_url": "http://download.fedoraproject.org/pub/fedora/linux/releases/22/Server/x86_64/iso/Fedora-Server-netinst-x86_64-22.iso",
            "name": "virtualbox",
            "shutdown_command": "systemctl poweroff",
            "ssh_password": "qwerty",
            "ssh_timeout": "30m",
            "ssh_username": "root",
            "type": "virtualbox-iso",
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--bioslogodisplaytime",
                    "1"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "1"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "512"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--nictype1",
                    "virtio"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--paravirtprovider",
                    "kvm"
                ],
                [
                    "storagectl",
                    "{{.Name}}",
                    "--name",
                    "IDE Controller",
                    "--remove"
                ]
            ],
            "virtualbox_version_file": "/root/virtualbox-version",
            "vm_name": "Fedora-22"
        },
        {
            "boot_command": [
                "<esc>",
                "<wait>",
                "vmlinuz ",
                "initrd=initrd.img ",
                "inst.stage2=hd:LABEL=Fedora-22-x86_64 ",
                "rd.live.check ",
                "net.ifnames=0 ",
                "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg",
                "<enter>"
            ],
            "boot_wait": "10s",
            "disk_size": 20480,
            "guest_os_type": "fedora-64",
            "http_directory": "kickstart/",
            "iso_checksum": "9f1f2f19f75cc3b97da41878b5c86188fa8d27ed446bd97d9df615c137c77cfc",
            "iso_checksum_type": "sha256",
            "iso_url": "http://download.fedoraproject.org/pub/fedora/linux/releases/22/Server/x86_64/iso/Fedora-Server-netinst-x86_64-22.iso",
            "name": "vmware",
            "shutdown_command": "systemctl poweroff",
            "ssh_password": "qwerty",
            "ssh_timeout": "30m",
            "ssh_username": "root",
            "tools_upload_flavor": "linux",
            "type": "vmware-iso",
            "vm_name": "Fedora-22",
            "vmx_data": {
                "memsize": "512",
                "numvcpus": "1"
            }
        }
    ],
    "description": "This Packer template can be used to build minimal Fedora 22 base boxes for\nVagrant\u2019s VirtualBox and VMware providers, starting from Fedora 22 Server\u2019s\nnetinstall ISO for x86_64 architectures.",
    "post-processors": [
        {
            "output": "Fedora-22-x86_64-{{.Provider}}.box",
            "type": "vagrant"
        }
    ],
    "provisioners": [
        {
            "only": [
                "virtualbox"
            ],
            "scripts": [
                "scripts/10virtualbox.sh"
            ],
            "type": "shell"
        },
        {
            "only": [
                "vmware"
            ],
            "scripts": [
                "scripts/10vmware.sh"
            ],
            "type": "shell"
        },
        {
            "scripts": [
                "scripts/20vagrant.sh",
                "scripts/30cleanup.sh"
            ],
            "type": "shell"
        }
    ]
}
